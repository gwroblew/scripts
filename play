#!/bin/bash
set -o pipefail

cd ~/media/music
SELECTED="$(find . \( \( -type f -name '*.mp3' \) -o -type d \) -print0 | fzf --read0 --print0 --filter "$*" | cut -d '' -f1)"
if [[ -z "${SELECTED}" ]]; then
  echo "No music matches the query '$*'."
  exit 1
fi

# TODO: will fail with newlines in filenames
if [[ "${SELECTED}" == '.' ]]; then
  SORT=shuf
else
  SORT=sort
fi

exec mpv --playlist <(find "${SELECTED}" -type f -name '*.mp3' | ${SORT} | xargs realpath -s) --loop-playlist
